# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Default
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Exceptions
[{package.json,.*rc}]
indent_size = 2

[*.scss]
max_line_length = 300
indent_size = 2

[*.{js,jsx,mjs,php}]
max_line_length = 120
quote_type = single

[*.yaml]
indent_size = 2
quote_type = single

[*.json]
max_line_length = 1000

# Markdown uses trailing whitespace for line breaks
[*.md]
max_line_length = 200
trim_trailing_whitespace = false
indent_size = 2

[Makefile]
indent_style = tab
